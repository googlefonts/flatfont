  openTypeVheaVertTypoAscender: float;
  openTypeVheaVertTypoDescender: float;
  openTypeVheaVertTypoLineGap: float;
  openTypeVheaCaretSlopeRise: int;
  openTypeVheaCaretSlopeRun: int;
  openTypeVheaCaretOffset: int;

